<h1>Listing posts</h1>

<table>
  <tr>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, :action => 'show', :id => post.id %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => post.id %></td>
    <td><%= link_to 'Destroy', {:action => 'destroy', :id => post.id}, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

